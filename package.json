{
  "name": "mobh5",
  "version": "1.0.0",
  "description": "My well-made Nuxt.js project",
  "author": "chenyu",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development HOST=0.0.0.0 nodemon server/index.js --watch server",
    "build": "nuxt build && npm start",
    "start": "NODE_ENV=production node server/index.js",
    "pm2Build": "nuxt build && npm run pm2Start",
    "pm2Start": "NODE_ENV=production pm2 start --name  'nuxt-ssr' server/index.js",
    "generate": "nuxt generate",
    "analyze": "nuxt build --analyze"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.0.0",
    "cross-env": "^5.2.0",
    "cube-ui": "^1.12.6",
    "koa": "^2.5.2",
    "nuxt": "^2.0.0",
    "swiper": "^4.4.2"
  },
  "devDependencies": {
    "babel-plugin-component": "^1.1.1",
    "node-sass": "^4.10.0",
    "nodemon": "^1.11.0",
    "sass-loader": "^7.1.0",
    "webpack-transform-modules-plugin": "^0.3.5"
  },
  "transformModules": {
    "cube-ui": {
      "transform": "cube-ui/lib/${member}",
      "kebabCase": true,
      "style": {
        "ignore": [
          "create-api",
          "better-scroll",
          "locale"
        ]
      }
    }
  }
}
